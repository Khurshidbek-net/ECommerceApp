@using E_Commerce.Mvc.Enums
@model ProductViewModel

<div class="product-create-container">
    <h2 class="form-title">Create New Product</h2>
    @if (!string.IsNullOrEmpty((string)TempData["ErrorMessage"]))
    {
        <div class="alert alert-danger">
            <strong>@TempData["ErrorMessage"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (!string.IsNullOrEmpty((string)TempData["SuccessMessage"]))
    {
        <div class="alert alert-success">
            <strong>@TempData["SuccessMessage"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="create-product-form">
        <div class="form-group">
            <label for="Name">Product Name</label>
            <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="Enter product name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" id="Description" rows="3" placeholder="Enter product description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Price">Price</label>
            <input type="number" asp-for="Price" class="form-control" id="Price" step="0.01" placeholder="Enter product price" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Category">Category</label>
            <select asp-for="Category" class="form-control" id="Category" required>
                <option value="" disabled selected>Select a category</option>
                <option value="@Category.Books">Books</option>
                <option value="@Category.Electronics">Electronics</option>
                <option value="@Category.Clothing">Clothing</option>
                <option value="@Category.HomeAndKitchen">Home & Kitchen</option>
                <option value="@Category.Food">Food</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ImageUrl">Upload Image</label>
            <input type="file" asp-for="ImageUrl" class="form-control" id="ImageUrl" accept="image/*" required />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-create">Create Product</button>
    </form>
</div>
