@model IEnumerable<E_Commerce.Mvc.Models.Product>

<h2>Products</h2>
<table class="styled-table table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price $</td>
                <td>
                    <img src="@(string.Concat("https://localhost:7035", product.ImageUrl))" alt="@product.Name" style="width:100px;height:auto;" />
                </td>
                <td>@product.Category</td>
                <td>
                    <form asp-action="Delete" asp-controller="Product" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn-action btn-delete" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
