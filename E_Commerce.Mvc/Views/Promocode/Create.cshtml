@model PromoCode // Adjust the namespace accordingly

@{
    ViewBag.Title = "Create Promo Code";
}

<style>
    .promo-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 10px;
        background: #f9f9f9;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    }

    /* Form Title */
    .form-title {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #4CAF50;
    }

    /* Form Group Styling */
    .form-group {
        margin-bottom: 20px;
    }

    /* Label Styling */
    .form-label {
        display: block;
        margin-bottom: 5px;
        font-weight: 500;
    }

    /* Input and Textarea Styling */
    .form-control {
        display: block;
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    /* Focus State for Inputs */
    .form-control:focus {
        border-color: #4CAF50;
        box-shadow: 0 0 8px rgba(76, 175, 80, 0.3);
    }

    /* Button Styling */
    .btn-create {
        display: block;
        width: 100%;
        padding: 12px;
        margin-top: 20px;
        background: linear-gradient(45deg, #4CAF50, #8BC34A);
        border: none;
        border-radius: 6px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s, transform 0.3s;
    }

    /* Hover State for Button */
    .btn-create:hover {
        background: linear-gradient(45deg, #8BC34A, #4CAF50);
        transform: translateY(-2px);
    }

    /* Error Message Styling */
    .text-danger {
        font-size: 12px;
        color: #ff0000;
        margin-top: 5px;
        z-index: 1;
    }
</style>

<div class="promo-container">
    <div class="form-title">Create Promo Code</div>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Code" class="form-label">Promo Code</label>
            <input asp-for="Code" class="form-control" placeholder="Enter promo code" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DiscountPercent" class="form-label">Discount Percentage (%)</label>
            <input asp-for="DiscountPercent" class="form-control" type="number" min="0" max="100" placeholder="Enter discount percentage" />
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ExpireAfterMinutes" class="form-label">Expiration Time (minutes)</label>
            <input asp-for="ExpireAfterMinutes" class="form-control" type="number" min="1" placeholder="Enter expiration time in minutes" />
            <span asp-validation-for="ExpireAfterMinutes" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn-create">Create Promo Code</button>
            <a asp-action="Index" class="btn btn-secondary btn-register">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
